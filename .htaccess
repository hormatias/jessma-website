# Deny access to sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Deny access to backup files
<FilesMatch "\.(bak|backup|old|orig|tmp)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Remove server signature
ServerSignature Off

# UTF-8 encoding
AddDefaultCharset UTF-8
